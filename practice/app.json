{
	"expo": {
		"name": "my project for practice",
		"slug": "practice-project",
		"description": "тренировочное приложение",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/icon.png",
		"userInterfaceStyle": "light",
		"backgroundColor": "#000000",
		"splash": {
			"image": "./assets/splash-icon.png",
			"resizeMode": "contain",
			"backgroundColor": "#000000"
		},
		"ios": {
			"supportsTablet": false,
			"bundleIdentifier": "com.yourcompany.practiceapp",
			"infoPlist": {
				"NSCameraUsageDescription": "Доступ к камере",
				"NSMicrophoneUsageDescription": "Доступ к микрофону",
				"NSPhotoLibraryUsageDescription": "Доступ к галерее",
				"NSLocationWhenInUseUsageDescription": "Геолокация"
			}
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/adaptive-icon.png",
				"backgroundColor": "#000000"
			},
			"package": "com.yourcompany.practiceapp",
			"permissions": [
				"android.permission.CAMERA",
				"android.permission.READ_MEDIA_IMAGES",
				"android.permission.READ_MEDIA_VIDEO",
				"android.permission.ACCESS_COARSE_LOCATION",
				"android.permission.ACCESS_FINE_LOCATION",
				"android.permission.POST_NOTIFICATIONS"
			]
		},
		"web": {
			"favicon": "./assets/favicon.png"
		},
		"plugins": ["expo-router"]
	}
}
